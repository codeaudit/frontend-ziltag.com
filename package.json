{
  "name": "frontend-ziltag.com",
  "version": "0.0.1",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel src --out-dir dist --ignore=client",
    "build:client": "webpack --config webpack/prod.config.babel.js",
    "serve": "NODE_ENV=dev NODE_PORT=2000 nodemon src/server.js --ignore src/client.js --exec babel-node",
    "start": "pm2 start dist -i 0 --name ziltag",
    "stop": "pm2 delete ziltag",
    "restart": "pm2 restart ziltag"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ziltag/frontend-ziltag.com.git"
  },
  "bugs": {
    "url": "https://github.com/ziltag/frontend-ziltag.com/issues"
  },
  "homepage": "https://github.com/ziltag/frontend-ziltag.com#readme",
  "devDependencies": {
    "koa-webpack-dev-middleware": "^1.0.1",
    "koa-webpack-hot-middleware": "^1.0.1",
    "react-hot-loader": "^1.3.0"
  },
  "dependencies": {
    "babel-core": "^6.0.20",
    "babel-loader": "^6.0.0",
    "babel-polyfill": "^6.0.16",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-react": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "cssnano": "^3.3.2",
    "isomorphic-fetch": "^2.2.0",
    "koa": "^2.0.0-alpha.2",
    "koa-convert": "^1.0.0",
    "koa-static-cache": "^3.1.2",
    "qs": "^5.2.0",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-redux": "^4.0.0",
    "redux": "^3.0.4",
    "serialize-javascript": "^1.1.2",
    "webpack": "^1.12.2"
  }
}
